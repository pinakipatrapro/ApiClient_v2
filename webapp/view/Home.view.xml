<mvc:View controllerName="pinaki.sap.com.ApiClient.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">
	<Page showHeader="false" backgroundDesign="Transparent">
		<SearchField class="sapUiMediumMargin" search="onLoadUrlPress" value="{idConfigModel>/mainUrl}" 
			placeholder="Enter service url " width="90%"/>
		<VBox alignItems="Center" class="sapUiLargeMarginTop">
			<core:Icon src="sap-icon://customer-history" color="#027761" hoverColor="#346187"
			size="2rem" press="toggleMasterPanelVisibility" tooltip="Click to view activity history"/>
		</VBox>
	</Page>
</mvc:View>